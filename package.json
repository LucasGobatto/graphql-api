{
  "name": "graphql-api",
  "version": "1.0.0",
  "description": "A package that creates a simple GraphQL server template with some schemas, authentication modes and token generation. The server will be hosted localy at ´localhost:PORT/graphql´.",
  "main": "src/index.ts",
  "scripts": {
    "start": "nodemon 'src/index.ts' --exec 'ts-node' src/index.ts -e ts,graphql"
  },
  "dependencies": {
    "apollo-server-express": "2.24.0",
    "express": "4.17.1",
    "graphql": "15.5.0",
    "nodemon": "2.0.7",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/express": "4.17.11",
    "@types/graphql": "14.5.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/LucasGobatto/graphql-api.git"
  },
